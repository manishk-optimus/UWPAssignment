<Page x:Class="UWPAssignment.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UWPAssignment"
      xmlns:vm="using:UWPAssignment.ViewModels"
      xmlns:m="using:UWPAssignment.Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <!--<Page.DataContext>
        <vm:MenuViewModel />
    </Page.DataContext>-->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderThickness="10,10,10,10"
                BorderBrush="#0B4A58" />
        <GridView x:ConnectionId='1' x:Name="grdView"
                  Margin="0,0,0,584"
                  SelectionMode="None"
                  IsItemClickEnabled="true"
                  IsSwipeEnabled="false"
                  Background="#0B4A58"
                  
                  RenderTransformOrigin="0.489,-1.684">
            <TextBox Text="HALDIRAM"
                     Background="#0B4A58"
                     Foreground="White"
                     Height="53"
                     Width="350" />
        </GridView>
        <StackPanel x:ConnectionId='2' Name="_main"
                    RenderTransformOrigin="0.49,-6.33"
                    Margin="68,101,62,505"
                 >
            <TextBox Text="{Binding SearchValue,Mode=TwoWay}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Height="35"
                     Width="230"
                     PlaceholderText="Search the menu"
                     Margin="0,25,0,0" />
            <Button x:ConnectionId='4' Name="searchButton"
                    Command="{Binding OkButtonClicked}"
                    Content="Search"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="34"
                    Width="230"
                    Margin="0,0,0,0"
                    Background="#0B4A58" />
            <Button x:ConnectionId='5' x:Name="_button"
                    Margin="10,10,0,10"
                    Height="50"
                    Width="220"
                    Content="Click"
                    Background="Black"
                    Foreground="White"
                    Command="{Binding ImageClickCommand}" />
            <Popup x:ConnectionId='6' x:Name="popup"
                   IsOpen="{Binding NotAvailable}"
                   Width="320"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Viewbox>
                    <ContentPresenter Content="Sorry Item Not Available"
                                      Foreground="Red" />
                </Viewbox>
            </Popup>

        </StackPanel>

        <!--<Button Name="SearchButton"
                Content="Ok"
                Margin="157,140,0,468"
               HorizontalAlignment="center"
                />-->
        <!--<Image Width="318"
               Height="100"
               RenderTransformOrigin="0.443,0.551"
               Source="{Binding ImageSource}">
            <Image.Source>
                <BitmapImage  UriSource="{Binding ImageSource}" />
            </Image.Source>
        </Image>-->


        <GridView x:ConnectionId='3' Name="_dataGridView"
                  Margin="10,321,10,10"
                  >
            <GridView.ItemTemplate>
                <DataTemplate                          >
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Height="39"
                                     Margin="0,10">
                                <ContentPresenter Content="{Binding Name,Mode=TwoWay}" />
                            </Viewbox>
                            <Viewbox Height="39"
                                     Margin="35,0,5,0">
                                <ContentPresenter Content="Rs" />
                            </Viewbox>
                            <Viewbox  Height="39"
                                      Margin="0,0,0,0">
                                <ContentPresenter Content="{Binding Price}" />
                            </Viewbox>
                        </StackPanel>
                        <Button Command="{Binding DataContext.ImageClickCommand,ElementName=_main,Mode=TwoWay}"
                                CommandParameter="{Binding Name}"
                                Height="200"
                                Width="400">
                            <Button.Template>
                                <ControlTemplate>
                                    <Image Source="{Binding ImageSource}"/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

